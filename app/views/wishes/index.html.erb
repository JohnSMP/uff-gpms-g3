<div class="container">
  <div class="card">
    <div class="card-header">
      <h3 class="mb-0">Lista de Desejos</h3>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% @wishes.each do |wish| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <h5><%= link_to wish.course.name, course_path(wish.course) %></h5>

            <button class="btn btn-danger" id="destroyWish" data-id="<%= wish.id %>">
              Remover
            </button>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="card-footer">
      <button class="btn btn-danger" id="destroyAllWishes">
        Limpar Lista
      </button>
    </div>
  </div>
</div>