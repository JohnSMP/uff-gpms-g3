<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @lesson.title %></h1>

    <% if can? :edit, @lesson %>
      <%= link_to 'Editar aula', edit_lesson_path(@lesson), class: 'btn btn-primary' %>
    <% end %>
  </div>

  <% if @lesson.lesson_students.by_student(current_user.student).present? %>
    <div class="alert alert-success">Você já assistiu essa aula!</div>
  <% end %>

  <div style="height: 500px;">
    <%= @playlist.embed_code(iframe_attributes: { width: '100%', height: '100%' }).html_safe %>
  </div>

  <h3 class="mt-3">Descrição:</h3>
  <p><%= @lesson.description %></p>

  <hr />

  <div class="mb-3">
    <%= commontator_thread(@lesson) %>
  </div>
</div>