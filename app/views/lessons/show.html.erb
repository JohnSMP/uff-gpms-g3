<h1><%= @lesson.title %></h1>

<div style="height: 500px;">
<%= @playlist.embed_code(iframe_attributes: { width: '100%', height: '100%' }).html_safe %>
</div>

<h3 class="mt-3">Descrição:</h3>
<p><%= @lesson.description %></p>

<% if current_user.teacher == @lesson.course.teacher %>
  <%= link_to 'Editar aula', edit_lesson_path(@lesson), class: 'btn btn-primary' %>
<% end %>