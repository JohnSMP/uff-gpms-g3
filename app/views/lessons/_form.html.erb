<%= form_with model: @lesson, local: true do |f| %>
  <%= f.hidden_field :course_id, value: @lesson.course_id %>

  <div class="card-body">
    <% if @lesson.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h5>A validação falhou:</h5>

        <ul class="mb-0">
          <% @lesson.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col-sm-6 col-12">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>
      <div class="col-sm-6 col-12">
        <%= f.label :position %>
        <%= f.number_field :position, min: 0, step: 1, required: true,
                           class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :video_url %>
      <%= f.text_field :video_url, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="card-footer">
    <%= f.submit 'Salvar', class: 'btn btn-success' %>
  </div>
<% end %>
