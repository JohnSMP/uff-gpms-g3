<h1><%= @course.name %></h1>
<h3>
  por <%= link_to @course.teacher.user.name, teacher_path(@course.teacher) %>
</h3>

<h6 class="text-muted"><%= @course.students.size %> aluno(s)</h6>

<hr />

<div class="card mb-3">
  <div class="card-header">
    <h5 class="mb-0">Descrição</h5>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @course.description %></p>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    <h5 class="mn-0">Ementa</h5>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @course.syllabus %></p>
  </div>
</div>

<hr />

<h4><%= number_to_currency @course.price %></h4>
<%= render partial: 'courses/buttons', locals: { course: @course } %>

<hr />

<h3 class="mt-3">Avaliações</h3>
<% if @course.course_ratings.exists? %>
  <%= render partial: 'course_ratings/ratings',
             locals: { rates: @course.course_ratings } %>
<% else %>
  <div class="alert alert-warning">O curso ainda não tem avaliações.</div>
<% end %>