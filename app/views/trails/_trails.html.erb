<div class="row">
  <% @trails.each do |trail| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
      <div class="card mx-auto" style="width: 220px; height: 400px;">
        <div class="p-2 text-center">
          <%= image_tag trail_image(trail), class: 'card-img-top img-card-list' %>
        </div>
        <hr>
        <div class="card-body pt-0 pb-2">
          <h3 class="card-title mb-1 lists-card-title">
            <%= link_to trail.title, trail_path(trail) %>
          </h3>
          <h5>
            <%= "#{trail.courses.length} #{'Curso'.pluralize(trail.courses.length)}" %>
          </h5>
        </div>
        <div class="card-footer p-0">
          <% if can?(:destroy, Trail) %>
            <button class="btn btn-danger w-100 rounded-0 destroyTrail"
                    data-id="<%= trail.id %>">
              Excluir
            </button>
          <% else %>
            <%= link_to 'Ver', trail_path(trail), class: 'btn btn-info w-100 rounded-0' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>