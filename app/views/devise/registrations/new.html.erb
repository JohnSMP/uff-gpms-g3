<div class="container">
  <div class="card w-75 mx-auto mt-3">
    <div class="card-header">
      <h3 class="mb-0"><%= t('devise.registrations.new.sign_up') %></h3>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="card-body">
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class="row">
          <div class="form-group col-6">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, class: 'form-control',
                             required: true %>
          </div>

          <div class="form-group col-6">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: 'email', class: 'form-control',
                              required: true %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-4">
            <%= f.label :cpf %>
            <%= f.text_field :cpf, class: 'form-control', required: true %>
          </div>

          <div class="form-group col-4">
            <%= f.label :gender %>
            <%= f.select :gender,
                         [['Feminino', :female], ['Masculino', :male], ['Outro', :other]],
                         { include_blank: 'Selecione seu sexo' },
                         class: 'form-control', required: true %>
          </div>

          <div class="form-group col-4">
            <%= f.label :birthdate %>
            <%= f.date_field :birthdate, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-6">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: 'new-password',
                                 class: 'form-control', required: true %>
            <% if @minimum_password_length %>
              <small id="passwordHelp" class="form-text text-muted">
                <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
              </small>
            <% end %>
          </div>

          <div class="form-group col-6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password',
                                 class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="actions">
          <%= f.submit t('devise.registrations.new.sign_up'), class: 'btn btn-success' %>
        </div>
        <%= render 'devise/shared/links' %>
      </div>
    <% end %>
  </div>
</div>